<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_selected="true">
        <bitmap android:src="@drawable/like_selected"
            android:tint="#FE5955"/>
    </item>
    <item
        android:state_pressed="true">
        <bitmap android:src="@drawable/like_normal"
            android:tint="@color/yellow_pressed"/>
    </item>
    <item>
        <bitmap android:src="@drawable/like_normal"
            android:tint="#eeeeee"/>
    </item>
</selector>