<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="13dp">

        <tl.pojul.com.fastim.View.widget.PolygonImage.view.PolygonImageView
            android:id="@+id/sub_reply_photo"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/back"
            android:clickable="true"
            android:contextClickable="true"
            android:src="@drawable/photo_default"
            app:poly_corner_radius="12"
            app:poly_rotation_angle="12"
            app:poly_vertices="0" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/sub_reply_photo"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sub_nick_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="韩信"
                android:textColor="#666666"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sub_reply_certificate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="已实名"
                    android:textColor="#777777"
                    android:textSize="9sp" />

                <ImageView
                    android:id="@+id/sub_reply_sex"
                    android:layout_width="10dp"
                    android:layout_height="9dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/man" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/reply_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:text="1分钟前"
            android:textColor="#7c7c7c"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="10sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/sub_reply_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp"
        android:text="真的很好呢"
        android:textColor="#787878"
        android:padding="1dp"
        android:layout_below="@+id/sub_reply_photo"
        android:textSize="13sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="8dp"
        android:background="#cdcdcd"/>
</LinearLayout>
