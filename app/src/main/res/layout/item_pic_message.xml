<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_text_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <tl.pojul.com.fastim.View.widget.PolygonImage.view.PolygonImageView
            android:id="@+id/friend_photo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/photo_default"
            app:poly_border="true"
            app:poly_border_color="#44b8e2"
            app:poly_border_width="1dp"
            app:poly_corner_radius="10"
            app:poly_rotation_angle="10"
            app:poly_shadow="true"
            app:poly_shadow_color="#ff000000"
            app:poly_vertices="0" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nick_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="middle"
                android:maxWidth="180dp"
                android:paddingBottom="3dp"
                android:singleLine="true"
                android:text="卫道者[穿越]"
                android:textColor="#666666"
                android:textSize="16dp" />

            <RelativeLayout
                android:id="@+id/rl_message"
                android:layout_width="120dp"
                android:layout_height="120dp">

                <tl.pojul.com.fastim.View.widget.ShapedImageView
                    android:id="@+id/pic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:clickable="true"
                    android:minWidth="50dp"
                    android:src="@drawable/login_bg"
                    app:round_radius="5dp"
                    app:shape_mode="round_rect" />

                <ProgressBar
                    android:id="@+id/progressBar1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:indeterminateBehavior="repeat"
                    android:indeterminateDrawable="@drawable/dialog_loading"
                    android:indeterminateOnly="true" />

            </RelativeLayout>

        </LinearLayout>

        <tl.pojul.com.fastim.View.widget.PolygonImage.view.PolygonImageView
            android:id="@+id/my_photo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/photo_default"
            app:poly_border="true"
            app:poly_border_color="#44b8e2"
            app:poly_border_width="1dp"
            app:poly_corner_radius="10"
            app:poly_rotation_angle="10"
            app:poly_shadow="true"
            app:poly_shadow_color="#ff000000"
            app:poly_vertices="0" />

    </LinearLayout>

</RelativeLayout>

