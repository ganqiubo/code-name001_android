<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="年龄段"
        android:textColor="#787878"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <tl.pojul.com.fastim.View.widget.RangeSeekBar
            android:id="@+id/age_range_rsb"
            android:layout_width="220dp"
            android:layout_height="25dp"
            android:layout_marginLeft="20dp"
            app:lineColorSelected="#dd7711"
            app:max="100"
            app:min="0" />

        <TextView
            android:id="@+id/age_range_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:text="18-25岁"
            android:textColor="#787878"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="性 别："
        android:textColor="#787878"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/man"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:background="@drawable/select_tag_bt"
            android:clickable="true"
            android:paddingBottom="3dp"
            android:paddingLeft="11dp"
            android:paddingRight="11dp"
            android:paddingTop="3dp"
            android:text="男 生"
            android:textColor="@color/selector_text_white_gray"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/woman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/select_tag_bt"
            android:clickable="true"
            android:paddingBottom="3dp"
            android:paddingLeft="11dp"
            android:paddingRight="11dp"
            android:paddingTop="3dp"
            android:text="女 生"
            android:textColor="@color/selector_text_white_gray"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/sex_nolimit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/select_tag_bt"
            android:clickable="true"
            android:paddingBottom="3dp"
            android:paddingLeft="11dp"
            android:paddingRight="11dp"
            android:paddingTop="3dp"
            android:text="不 限"
            android:textColor="@color/selector_text_white_gray"
            android:textSize="11sp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="信誉指数"
        android:textColor="#787878"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <tl.pojul.com.fastim.View.widget.MySeekBar
            android:id="@+id/credit_msb"
            android:layout_width="220dp"
            android:layout_height="25dp"
            android:layout_marginLeft="20dp"
            app:lineColorSelected="#dd7711"

            app:max="100" />

        <TextView
            android:id="@+id/credit_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:text="> 0"
            android:textColor="#787878"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>
