<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:orientation="horizontal"
    >
<LinearLayout
    android:id="@+id/ll_text_message"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:orientation="horizontal">

    <tl.pojul.com.fastim.View.widget.PolygonImage.view.PolygonImageView
        android:id="@+id/friend_photo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/photo_default"
        app:poly_border="true"
        app:poly_border_color="#44b8e2"
        app:poly_border_width="1dp"
        app:poly_corner_radius="10"
        app:poly_rotation_angle="10"
        app:poly_shadow_color="#ff000000"
        app:poly_shadow="true"
        android:layout_marginRight="5dp"
        app:poly_vertices="0" />

    <RelativeLayout
        android:id="@+id/rl_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_corner_small"
        android:clickable="true"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/file_icon"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingLeft="8dp"
            android:paddingBottom="8dp"
            android:src="@drawable/unknow_file"
            android:adjustViewBounds="true"
            android:clickable="false"
            android:minWidth="50dp" />

        <TextView
            android:id="@+id/file_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginTop="8dp"
            android:maxWidth="88dp"
            android:layout_marginLeft="1dp"
            android:layout_toRightOf="@+id/file_icon"
            android:clickable="false"
            android:layout_marginRight="8dp"/>

        <ProgressBar
            android:id="@+id/progressBar1"
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="8dp"
            android:max="100"
            android:progress="0"
            style="?android:attr/progressBarStyleHorizontal"
            android:progressDrawable="@drawable/progress_file_download"
            />
    </RelativeLayout>

    <tl.pojul.com.fastim.View.widget.PolygonImage.view.PolygonImageView
        android:id="@+id/my_photo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/photo_default"
        app:poly_border="true"
        app:poly_border_color="#44b8e2"
        app:poly_border_width="1dp"
        app:poly_corner_radius="10"
        app:poly_rotation_angle="10"
        app:poly_shadow_color="#ff000000"
        app:poly_shadow="true"
        android:layout_marginRight="15dp"
        app:poly_vertices="0" />

</LinearLayout>

</RelativeLayout>

