<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="12dp"
    android:orientation="vertical"
    android:background="@drawable/ripple_normal"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:clickable="false">

        <tl.pojul.com.fastim.View.widget.PolygonImage.view.PolygonImageView
            android:id="@+id/photo"
            app:poly_vertices="0"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="2dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:clickable="true"
            android:src="@drawable/photo_default" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/photo"
            android:layout_toLeftOf="@+id/time_ll"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="韩信 向你打了声招呼"
                android:textColor="#666666"
                android:textSize="14sp"
                android:clickable="false"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="21岁"
                    android:textSize="12sp"
                    android:textColor="#787878"
                    android:layout_gravity="center"
                    android:clickable="false"
                    />

                <ImageView
                    android:id="@+id/sex"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="3dp"
                    android:padding="1dp"
                    android:clickable="false"
                    android:src="@drawable/man" />

                <TextView
                    android:id="@+id/req_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="hi，很高兴认识你，能交个朋友吗？"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:maxWidth="80dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="#787878"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:clickable="false"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/time_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:clickable="false">

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20分钟前"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="#828282"
                android:textSize="10sp"
                android:clickable="false"
                />

            <TextView
                android:id="@+id/accepted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="同意"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/press_text_green_white"
                android:background="@drawable/press_corners_green"
                android:textSize="11sp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingRight="8dp"
                android:layout_marginTop="2dp"
                android:paddingLeft="8dp"
                android:clickable="true"
                />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:background="#cdcdcd"
        android:layout_marginTop="12dp"/>

</LinearLayout>
