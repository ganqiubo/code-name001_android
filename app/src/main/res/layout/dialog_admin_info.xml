<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="管理员账号密码"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        android:textColor="#454545"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:src="@drawable/button_normal"
            android:tint="@color/blue"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="认领成功"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:textSize="10sp"
            android:textColor="@color/blue"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号：12323232"
            android:textColor="#454545"
            android:layout_gravity="center"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/passwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码：12323232"
            android:layout_gravity="center"
            android:textColor="#454545"
            android:textSize="15sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <ImageView
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:tint="@color/red"
            android:layout_marginRight="1dp"
            android:layout_gravity="center"
            android:src="@drawable/waring"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:maxWidth="180dp"
            android:textSize="7sp"
            android:textColor="@color/red"
            android:text="管理员账号密码只会显示一次，请记下该账号密码"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#eeeeee"
        android:layout_marginTop="12dp"/>

    <TextView
        android:id="@+id/remembered"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="保存至文件"
        android:textSize="11sp"
        android:textColor="@color/blue"
        android:gravity="center"
        android:clickable="true"
        android:background="@drawable/ripple_normal"
        android:padding="11dp"/>
</LinearLayout>