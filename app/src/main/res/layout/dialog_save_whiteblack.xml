<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="260dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ffffff"
    >

    <TextView
        android:id="@+id/prompt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#676767"
        android:text="保存白名单"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="12dp"
        />

    <LinearLayout
        android:id="@+id/prompt_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/prompt_title"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/name_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="#787878"
            android:text="白名单名："
            android:layout_gravity="center"
            />

        <EditText
            android:id="@+id/name"
            android:layout_width="150dp"
            android:layout_height="28dp"
            android:background="@drawable/shape_et"
            android:textSize="13sp"
            android:textColor="#787878"
            android:layout_gravity="center"
            android:paddingLeft="5dp"
            android:textCursorDrawable="@null"
            android:hint="最多可输入15个字符"
            android:padding="5dp"
            android:textColorHint="#aaaaaa"
            android:maxLength="15"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/prompt_content"
        android:layout_marginTop="18dp"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ababab"
            android:layout_above="@+id/bt_ll"/>

        <LinearLayout
            android:id="@+id/bt_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">

            <Button
                android:id="@+id/left_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ripple_normal"
                android:text="保存"
                android:textColor="#787878"
                android:textSize="12sp"
                android:layout_weight="1"/>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#ababab"/>

            <Button
                android:id="@+id/right_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ripple_normal"
                android:text="取消"
                android:textColor="#787878"
                android:textSize="12sp"
                android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
